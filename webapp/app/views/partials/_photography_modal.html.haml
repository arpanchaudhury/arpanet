#photograph-modal.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'PhotographModal', :role => 'dialog', :tabindex => '-1'}
  .modal-dialog.modal-lg{:role => 'document'}
    .loader
      %h1 Loading quality images for you. Please wait.
      %i.fa.fa-inverse.fa-5x.fa-spinner.fa-spin
    .modal-content.hidden
      .modal-body.no-padding
        #carousel.carousel.slide{'data-ride' => 'carousel'}
          %ol.carousel-indicators
            - for i in 0..(image_details.size - 1)
              %li{'data-slide-to' => i, 'data-target' => '#carousel'}
          .carousel-inner{:role => 'listbox'}
            - for i in 0..(image_details.size - 1)
              .carousel-item
                %img{:src => "#{get_photograph_url(image_details[i])}", :alt => "#{get_photograph_title(image_details[i])}"}
                .carousel-caption
                  %h3= get_photograph_title(image_details[i])
                  %p= get_photograph_description(image_details[i])
          %a.left.carousel-control{'data-slide' => 'prev', :href => '#carousel', :role => 'button'}
            %span.icon-prev{'aria-hidden' => 'true'}
            %span.sr-only Previous
          %a.right.carousel-control{'data-slide' => 'next', :href => '#carousel', :role => 'button'}
            %span.icon-next{'aria-hidden' => 'true'}
            %span.sr-only Next
          .carousel-additional-controls
            %i.play-btn.fa.fa-play-circle.fa-3x.hidden
            %i.pause-btn.fa.fa-pause-circle.fa-3x
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
          %i.fa.fa-times-circle